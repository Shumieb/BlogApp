@inject BlogsClient Client

<section class="card p-4 my-4 text-center">
<h3 class="p-2">Featured Blogs</h3>

<ul class="list-unstyled row gap-5">
    @foreach (BlogModel blog in featuredBlogs!)
    {
        <li class="card" style="width: 18rem;">
            <img src="https://placehold.co/600x400" class="card-img-top" alt="image">
            <div class="card-body">
                <h5 class="card-title">@blog.Name</h5>
                <p class="card-text">@blog.Description</p>
                <a href="/blog/@blog.Id" role="button" class="btn btn-primary">View Blog</a>
            </div>

        </li>
    }
</ul>

<a href="/blogs" role="button" class="btn btn-primary w-25 m-auto">View All Blogs</a>

</section>


@code {
    private List<BlogModel>? featuredBlogs;

    protected override void OnInitialized()
    {
       featuredBlogs = Client.GetFeaturedBlogs();
    }
}
