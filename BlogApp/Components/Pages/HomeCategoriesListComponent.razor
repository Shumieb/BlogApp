@inject CategoriesClient Client

<section class="text-center card p-4 my-5">
    <h4 class="p-2">Categories</h4>

    <ul class="list-unstyled row gap-5">
        @foreach(CategoryModel category in categories!)
        {
            <li class="card" style="width: 18rem;">
                <div class="card-body text-center">
                    <h5 class="card-title">@category.Name</h5>
                    <a href="/category/@category.Id" role="button" class="btn btn-primary">View Category</a>
                </div>            
           </li>
        }
    </ul>

    <a href="/categories" role="button" class="btn btn-primary w-25 m-auto">View All Categories</a>

</section>


@code {
    private List<CategoryModel>? categories;

    protected override void OnInitialized()
    {
        categories = Client.GetCategories();
    }
}
